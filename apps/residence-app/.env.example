# Environment Configuration for Village Tech Residence App
# Copy this file to .env and fill in your actual values

# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Stripe Configuration (for card payments)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
# Note: Secret key should only be on server/Edge Functions, never in client

# PayMongo Configuration (for Philippine payments)
EXPO_PUBLIC_PAYMONGO_PUBLIC_KEY=pk_test_your-paymongo-public-key
# Note: Secret key should only be on server/Edge Functions, never in client

# Expo Configuration
EXPO_PUBLIC_PROJECT_ID=your-expo-project-id

# API Configuration
EXPO_PUBLIC_API_URL=https://api.villagetech.com
EXPO_PUBLIC_API_VERSION=v1

# App Configuration
EXPO_PUBLIC_APP_NAME=Village Tech Residence
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_ENVIRONMENT=development # development | staging | production

# Feature Flags (optional)
EXPO_PUBLIC_ENABLE_BIOMETRIC=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_PAYMENT_GATEWAY=true

# Sentry Configuration (optional - for error tracking)
EXPO_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics Configuration (optional)
EXPO_PUBLIC_ANALYTICS_ID=G-XXXXXXXXXX

# Deep Linking
EXPO_PUBLIC_DEEP_LINK_SCHEME=residence-app

# Payment Gateway URLs (for redirect flows)
EXPO_PUBLIC_PAYMENT_SUCCESS_URL=residence-app://payment-success
EXPO_PUBLIC_PAYMENT_CANCEL_URL=residence-app://payment-cancel

# Image Configuration
EXPO_PUBLIC_MAX_IMAGE_SIZE_MB=5
EXPO_PUBLIC_MAX_DOCUMENT_SIZE_MB=10

# Timeouts (in milliseconds)
EXPO_PUBLIC_API_TIMEOUT=30000
EXPO_PUBLIC_SYNC_INTERVAL=30000
EXPO_PUBLIC_SESSION_TIMEOUT=3600000 # 1 hour

# Debug Configuration
EXPO_PUBLIC_DEBUG_MODE=false
EXPO_PUBLIC_LOG_LEVEL=error # error | warn | info | debug