# Production Environment Configuration for Village Tech Residence App
# This file is used for production deployments

# ==========================================
# SUPABASE CONFIGURATION (Required)
# ==========================================
# These will be provided by deployment platform environment variables
EXPO_PUBLIC_SUPABASE_URL=${SUPABASE_URL}
EXPO_PUBLIC_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}

# ==========================================
# EXPO CONFIGURATION (Required)
# ==========================================
EXPO_PUBLIC_PROJECT_ID=${EXPO_PROJECT_ID}

# ==========================================
# API CONFIGURATION (Required)
# ==========================================
EXPO_PUBLIC_API_URL=${API_URL:-https://api.villagetech.com}
EXPO_PUBLIC_API_VERSION=v1

# ==========================================
# APP CONFIGURATION (Required)
# ==========================================
EXPO_PUBLIC_APP_NAME=Village Tech Residence
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_ENVIRONMENT=production

# ==========================================
# FEATURE FLAGS (Production Optimized)
# ==========================================
EXPO_PUBLIC_ENABLE_BIOMETRIC=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_PAYMENT_GATEWAY=true

# ==========================================
# DEEP LINKING
# ==========================================
EXPO_PUBLIC_DEEP_LINK_SCHEME=residence-app

# ==========================================
# PAYMENT REDIRECT URLS
# ==========================================
EXPO_PUBLIC_PAYMENT_SUCCESS_URL=residence-app://payment-success
EXPO_PUBLIC_PAYMENT_CANCEL_URL=residence-app://payment-cancel

# ==========================================
# FILE UPLOAD LIMITS
# ==========================================
EXPO_PUBLIC_MAX_IMAGE_SIZE_MB=5
EXPO_PUBLIC_MAX_DOCUMENT_SIZE_MB=10

# ==========================================
# TIMEOUTS (Production Optimized)
# ==========================================
EXPO_PUBLIC_API_TIMEOUT=30000
EXPO_PUBLIC_SYNC_INTERVAL=60000
EXPO_PUBLIC_SESSION_TIMEOUT=3600000

# ==========================================
# DEBUG CONFIGURATION (Production: Disabled)
# ==========================================
EXPO_PUBLIC_DEBUG_MODE=false
EXPO_PUBLIC_LOG_LEVEL=error